# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/prism
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# OAuth - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Platform API Keys
LEETCODE_SESSION=your-leetcode-session-cookie
CODEFORCES_API_KEY=your-codeforces-api-key
CODEFORCES_API_SECRET=your-codeforces-api-secret

# OpenProject Integration
OPENPROJECT_API_URL=https://your-openproject-instance.com
OPENPROJECT_API_KEY=your-openproject-api-key

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret

# Microsoft Graph API (for MS Calendar)
MS_GRAPH_CLIENT_ID=your-ms-graph-client-id
MS_GRAPH_CLIENT_SECRET=your-ms-graph-client-secret
MS_GRAPH_TENANT_ID=your-ms-tenant-id
MS_GRAPH_REDIRECT_URI=http://localhost:5000/api/auth/microsoft/callback

# Email Service (for notifications and verification)
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@prism.com

# Queue Configuration
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# Deployment & Portfolio Services
DEPLOYMENT_SERVICE_URL=http://localhost:3001
DOMAIN_PROVIDER_API=your-domain-provider-api-key
PORTFOLIO_STORAGE_PATH=/var/www/portfolios
PORTFOLIO_BASE_URL=https://portfolios.prism.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs
LOG_MAX_FILES=14d

# Sync Jobs Configuration
SYNC_GITHUB_INTERVAL=3600000
SYNC_LEETCODE_INTERVAL=3600000
SYNC_CODEFORCES_INTERVAL=3600000
SYNC_CALENDAR_INTERVAL=1800000
SYNC_OPENPROJECT_INTERVAL=3600000
SYNC_SLACK_INTERVAL=1800000

# Security
BCRYPT_ROUNDS=10
COOKIE_SECRET=your-cookie-secret-change-this
SESSION_SECRET=your-session-secret-change-this

# Feature Flags
ENABLE_SOCKET_IO=true
ENABLE_MISSIONS=true
ENABLE_LEADERBOARD=true
ENABLE_PORTFOLIO_GENERATION=true

# External Services
GITHUB_API_URL=https://api.github.com
LEETCODE_API_URL=https://leetcode.com/graphql
CODEFORCES_API_URL=https://codeforces.com/api
